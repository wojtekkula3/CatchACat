<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/factCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/catImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/cat_image" />

            <TextView
                android:id="@+id/factNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/catImage"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                tools:text="Fact #1" />

            <TextView
                android:id="@+id/factIdLabel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/catImage"
                android:padding="4dp"
                android:textStyle="bold"
                tools:text="Id: 82937497943276868688" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>